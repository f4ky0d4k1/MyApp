<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@layout/rounded_border_light_gray">

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@layout/rounded_border_gray"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="13dp" />

    <TextView
        android:id="@+id/text_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/text_time"
        tools:layout_editor_absoluteX="13dp" />

    <TextView
        android:id="@+id/text_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/text_object"
        tools:layout_editor_absoluteX="13dp" />

    <TextView
        android:id="@+id/text_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/text_place"
        tools:layout_editor_absoluteX="13dp" />

</androidx.constraintlayout.widget.ConstraintLayout>